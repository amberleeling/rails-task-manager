<div class='d-flex justify-content-between align-items-center'>
  <h1>My tasks</h1>
  <%= link_to "++Add a new task", new_task_path, class: 'btn btn-primary' %>
</div>


<ul class='list-group list-group-flush'>
  <% @tasks.each do |task| %>
    <li class='list-group-item d-flex justify-content-between'>
      <div>
        <% if task.completed? %>
          <i class="fa-solid fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>

        <%= link_to task.title, task_path(task), class: 'text-decoration-none' %>
      </div>

      <div>
        <%= link_to edit_task_path(task),  class: 'text-decoration-none me-2' do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>

        <%= link_to task_path(task), class: 'text-decoration-none ms-2', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
